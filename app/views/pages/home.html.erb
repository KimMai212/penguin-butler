<div class="banner home-banner">
  <div class="search-section">
    <p class="h1 search-title">Are you looking for a penguin butler?</p>
    <p class="h2 search-title">Then you are at the right place...</p>
    <!-- <h3 class="search-title">
      <span id="banner-typed-text"></span>
    </h3> -->
    <form id="search-form" class="simple_form form-inline my-5 shadow" novalidate="novalidate" accept-charset="UTF-8" action="/search" method="post"> <input name="utf8" type="hidden" value="âœ“">
      <span class="string required home_search_keyword flex-grow-1">
        <input class="form-control transparent-input string required w-100" type="text" name="keyword" id="home_search_keyword" placeholder="">
      </span>
      <input type="submit" name="commit" value="Search for butler" class="btn btn-primary" data-disable-with="Find the perfect drink">
    </form>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div id="welcome" class="container pt-5 pb-3 text-center">
      <h1>Welcome to Penguin Butlers.</h1>
      <h2>Your website for penguin butlers.</h2>
    </div>

    <div class="col-md-10 text-center">
      <h3>Our top butlers</h3>
      <div class="row mb-5">
        <div class="card-wrap big">
          <% @top_butlers.each do |b| %>
            <%= link_to butler_path(b) do %>
            <div class="card shadow">
              <div class="card-image" style="background-image: url(<%= image_url(b.picture) %>);"></div>
                <h3><%= b.name %>, <%= b.age %> </h3>
                <p><%= b.description %></p>
            </div>
            <% end %>
          <% end %>
        </div>
      </div>

      <a class="btn btn-primary" href="/search">See all butlers</a>

    </div>
  </div>

</div>
