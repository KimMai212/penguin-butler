<div class="container">
  <div class="row">
    <div class="col-md-10">
      <div id="top" class="d-flex mt-3 align-items-center justify-content-between">
        <h1><%= @butler.name %></h1>
        <div class="ml-5 text-center">
          <div class="profile-picture" style="background-image: url(<%= image_url(@butler.picture) %>);"></div>
        </div>
      </div>
      <div class="d-flex">
        <div id="description" class="col-md-8">
          <p class="border-bottom pb-3 mt-3">This is <b><%= @butler.name %></b> from <%= @butler.city %>,<%= @butler.country %> . <%= @butler.description %></p>
          <div class="d-flex justify-content-between pb-3">
            <div id="skills">
              <p><strong>Skills</strong></p>
              <div class="d-flex mt-4">
                <div>
                  <div class="d-flex penguin-skills">
                    <img height="50"  width="50" src="<%= image_url('experience.png') %>" />
                    <p class="none">Years of Experiance:  <b><%= @butler.years_of_experience %></b> </p>
                  </div>
                  <div class="d-flex penguin-skills">
                    <img height="50" width="50" src="<%= image_url('academic.png') %>" />
                    <p>Academical Grade:  <b><%= @butler.academic_grade %></b> </p>
                  </div>
                  <div class="d-flex penguin-skills">
                    <img height="50" width="50" src="<%= image_url('age.png') %>" />
                    <p>Age:   <b><%= @butler.age %></b></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-4 booking-form">
          <p>Test</p>

        </div>
      </div>
    </div>
  </div>
</div>
