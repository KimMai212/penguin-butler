<div id="edit" class="container">
  <div class="row justify-content-center">
    <div class="col-md-10 mt-5 panel shadow">
      <h1>Edit booking dates</h1>
      <div class="wrap">
        <%= simple_form_for(@booking) do |f| %>
          <%= f.input :start_date, as: :string, html5: true, input_html: { id: "range_start" } %>
          <%= f.input :end_date, as: :string, html5: true, input_html: { id: "range_end" } %>
          <%= f.submit "Edit dates!", class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-10">
      <%= link_to "< Back to dashboard", dashboard_path %>
    </div>
  </div>
</div>
