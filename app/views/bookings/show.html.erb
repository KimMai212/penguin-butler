<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-10 mt-5 panel shadow">
      <h1 class="mb-3">Your booking # <%= @booking.id %></h1>
      <%= link_to butler_path(@booking.butler) do  %>
        <div class="profile-picture right" style="background-image: url('<%= cl_image_path @booking.butler.photo.key, height: 500, width: 500 %>');"></div>
      <% end %>
      <table class="booking-table">
        <tr>
          <td>Penguin</td>
          <td>
            <%= link_to butler_path(@booking.butler) do  %>
            <b><%= @butler.name %></b>
            <% end %>
          </td>
        </tr>
        <tr>
          <td>From</td>
          <td><%= @booking.start_date.strftime("%d.%m.%Y") %></td>
        </tr>
        <tr>
          <td>To</td>
          <td><%= @booking.end_date.strftime("%d.%m.%Y") %></td>
        </tr>
        <tr>
          <td>Total cost</td>
          <td><b><%= @booking.price %> â‚¬</b></td>
        </tr>
      </table>
      <div class="justify-content-end d-flex align-items-center">
        <%= link_to "Edit booking", edit_booking_path(@booking), class: "btn btn-secondary mr-4" %>
        <%= link_to "Cancel booking", booking_path(@booking), method: :delete %>
      </div>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-10">
      <%= link_to "< Back to dashboard", dashboard_path %>
    </div>
  </div>
</div>
