<div class="container">
  <div class="row">
    <div class="col-md-10 mt-5 panel shadow">
      <h1 class="mb-3">Your booking # <%= @booking.id %></h1>
      <div class="profile-picture right" style="background-image: url(<%= image_url(@butler.picture) %>);"></div>
      <table class="booking-table">
        <tr>
          <td>Penguin</td>
          <td><b><%= @butler.name %></b></td>
        </tr>
        <tr>
          <td>From</td>
          <td><%= @booking.start_date.strftime("%d.%m.%Y") %></td>
        </tr>
        <tr>
          <td>To</td>
          <td><%= @booking.end_date.strftime("%d.%m.%Y") %></td>
        </tr>
        <tr>
          <td>Total cost</td>
          <td><b><%= @booking.price %> â‚¬</b></td>
        </tr>
      </table>
      <div class="justify-content-end d-flex align-items-center">
        <%= link_to "Edit booking", edit_booking_path(@booking), class: "btn btn-secondary mr-4" %>
        <%= link_to "Cancel booking", dashboard_path, method: :delete %>
      </div>
    </div>
  </div>
  <div class="row">
      <%= link_to "< Back to dashboard", dashboard_path %>
  </div>
</div>
